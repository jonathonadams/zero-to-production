{
  "hosting": {
    "public": "dist/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "src/",
      "tslint.json",
      "firebase.json",
      "tsconfig.json",
      "tsconfig.spec.json"
    ],
    "rewrites": [
      {
        "source": "**/*.@(js|css|svg|md)",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "function": "universal"
      }
    ]
  },
  "functions": {
    "source": "/"
  }
}
